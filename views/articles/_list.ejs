
   <%- include('../partials/menu.ejs') %>

   <div class="w-9/12">

    <div class="md:px-32 py-8 max-w-screen-lg">
        <div class="shadow overflow-hidden rounded border-b border-gray-200">
          <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
              <tr>
                <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Title</th>
                <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Created Date</th>
                <th class="text-left py-3 px-4 uppercase font-semibold text-sm text-justify" colspan="2">
                    Actions
              </tr>
            </thead>
          <tbody class="text-gray-700">
            <% articles.forEach(article => { %>
            <tr>
              <td class="w-1/3 text-left py-3 px-4">
                <%= article.title %>
            </td>
              <td class="w-1/3 text-left py-3 px-4">
                <%= article.createdAt.toLocaleDateString() %>
            </td>
              <td class="text-left py-3 px-4">
                <a href="/articles/edit/<%= article.id %>" class="bg-green-500 hover:bg-green-400 text-white font-bold py-2 px-4 rounded text-right">Edit</a>
              </td>
              <td class="text-left py-3 px-4">
                <form class="d-inline" action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 rounded text-right">Delete</button>
                </form>
              </td>
            </tr>
            <% })%>
          </tbody>
            <tfoot>
                <tr>
                    <td>
                    <a href="/articles/new" class="btn btn-success">New article</a></td></td>
                </tr>
            </tfoot>
          </table>
        </div>
    </div>
  </div>