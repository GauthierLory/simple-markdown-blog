<h1 class="text-4xl text-center"><%= article.title %></h1>


      <div class="container  mx-auto py-4 px-6">
          <div class="max-w-screen-lg mx-auto px-6 py-4 bg-white shadow-lg rounded-lg my-20">
            <div>
              <%= article.createdAt.toLocaleDateString() %>
              <p class="mt-2 text-gray-600">#<%= article.category.title %></p>
              <p>
                <a href="/articles/edit/<%= article.id %>" class="text-xl font-medium text-indigo-500">Read more</a>
                <form class="d-inline" action="/articles/<%= article.id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger">Delete</button>
              </form>
              </p>
              <p class="mt-2 text-black-600"><%= article.description %></p>
            </div>
            <div class="flex justify-end mt-4">
                <%= article.sanitizeHtml %>
            </div>
          </div>
      </div>